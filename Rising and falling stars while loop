#include <iostream>
#include <string>
using namespace std;
int main()
{
 int x = 1, y = 1;
  while (x <= 5)
  {
	y = x;
	while (y <= 5)
	{
		cout << "*"; 
		y++;
	}
	cout << endl;
	x++;
  }
  int i = 1, j = 1;
  while (i <= 5)
  {
	  j = 1;
	  while (j <= i)
	  {
		  cout << "*"; //print 5 stars
		  j++;
	  }
	  cout << endl;
	  i++;
  }
}
